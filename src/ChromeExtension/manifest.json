{
  "manifest_version": 3,
  "name": "Shared Saved Replies",
  "description": "Adds saved replies to GitHub's saved replies list when commenting on issues or pull requests.",
  "version": "0.0.5",
  "action":{
    "default_popup": "pages/popup/popup.html"
  },
  "background": {
    "service_worker": "pages/service-worker/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "js/time.js",
        "js/null.js",
        "pages/content-script/content-script-copy-saved-reply-element.js",
        "pages/content-script/content-script-urls.js",
        "pages/content-script/content-script-storage.js",
        "pages/content-script/content-script-elements.js",
        "pages/content-script/content-script.js"
      ]
    }
  ], 
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
   "options_ui":{
    "page":"pages/options/options.html",
    "open_in_tab":true
  },
  "permissions": [
    "tabs",
    "scripting",
    "webNavigation",
    "alarms",
    "storage",
    "offscreen"
  ],
  "host_permissions":[
    "https://github.com/*"
  ]
}
